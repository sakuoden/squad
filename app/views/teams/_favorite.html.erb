<% if post.post_favorites.where(post_favorite_user: current_user.id).exists? %>
	<%= link_to post_favorites_path(post_id: post.id), method: :delete, class:"teams_show_right_box_post_good_comment_link", remote: true do %>
		<i class="fas fa-heart"></i>
	<% end %>
<% else %>
	<%= link_to post_favorites_path(post_id: post.id), method: :post, class:"teams_show_right_box_post_good_comment_link", remote: true do %>
		<i class="far fa-heart"></i>
	<% end %>
<% end %>