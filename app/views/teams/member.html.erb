</div>


<!-- チームメンバー画面の箱(チームメンバーが見た場合) -->
<div class="teams_member_box">

	<!-- チームメンバー画面のタイトル -->
	<div class="teams_member_box_title">
		<%= "#{@team.team_name}　メンバー" %>
	</div>
	<!-- チームメンバー画面のタイトルタイトルfin -->



	<!-- タイトルの下のチームメンバー全員が入る箱 -->
	<div class="teams_member_box_all_member_box">

		<!-- チームメンバー1人が入る箱 -->
		<% @team.users.each do |user| %>
		<div class="teams_member_box_member_box">

			<div class="teams_member_box_member_box_image_position">
				<%= attachment_image_tag user, :image, :fill, 200, 200, fallback: "/images/no_image.jpg", class:"teams_member_box_member_image" %>
			</div>

			<!-- チームメンバー1人が入る箱の画像より下の部分の幅 -->
			<div class="teams_member_box_member_width">

				<div class="teams_member_box_member_edit_link_position">
				<%= link_to teams_member_edit_path(team_id: @team.id, user_id: user.id), method: :get, class:"teams_member_box_member_edit_link" do %>
					<i class="fas fa-pencil-alt"></i>
				<% end %>
				</div>

				<div class="teams_member_box_member_box_name_title">
					Name
				</div>

				<div class="teams_member_box_member_box_name">
					<%= "　" + user.name %>
				</div>

				<div class="teams_member_box_member_box_position_title">
					Position
				</div>

				<div class="teams_member_box_member_box_position">
					<% @members = Member.where(team_id: @team.id) %>
					<% @member = @members.find_by(user_id: user.id) %>
					<% if @member.position == nil %>
					<%= "　" %>
					<% else %>
					<%= "　" + @member.position %>
					<% end %>
				</div>

				<div class="teams_member_box_member_box_introduction_title">
					Introduction
				</div>

				<div class="teams_member_box_member_box_introduction">
					<% if @member.introduction == nil %>
					<%= "　" %>
					<% else %>
					<%= "　" + @member.introduction %>
					<% end %>
				</div>

			</div>
			<!-- チームメンバー1人が入る箱の画像より下の部分の幅fin -->

		</div>
		<!-- チームメンバー1人が入る箱fin -->

		<% end %>
	</div>
	<!-- タイトルの下のチームメンバー全員が入る箱fin -->


</div>
<!-- チームメンバー画面の箱(チームメンバーが見た場合)fin-->

	<!-- チームメンバーが見たときと見ないときで異なるのはこの箇所のみ -->
	<% if @members.where(user_id: current_user.id).exists?  %>
		<%= link_to "/teams/#{@team.id}/member/new", class:"teams_member_box_btn_link" do %>
			<div class="teams_member_box_create_team_btn">招待</div>
		<% end %>
	<% end %>
